<%- include ('includes/head')%>
<%- include ('includes/nav')%>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="container containerBuscar">
      <h1>Buscar Entidade / Agricultor</h1>
      <div class="row d-flex md-4 ">
         <div class="col-md-6 cadastroColunas">
            <div class="form-group col-md-8">
               <label for="cnpj">CPNJ/CPF:</label>
               <input type="text" class="form-control" id="cnpj" >
            </div>
         </div>
      </div>
      <button type="submit" class="btn btn-primary col-md-2 my-2" onclick="buscar()">Pesquisar</button>
      <button type="submit" class="btn btn-primary col-md-2 my-2">Cancelar</button>
    </div>
    

<%- include('includes/messages')%>

<% if(agricultores.length > 0 ) { %> 
      <div class="responsive-table">
        <table class="table my-3">
          <thead>
            <tr>
               <th scope="col">Nome:</th>
               <th scope="col">Cpf:</th>
               <th scope="col">Nome Fantasia:</th>
               <th scope="col">CNPJ:</th>
               <th scope="col">Visita:</th>
               <th scope="col" colspan="2">status:</th>
               <th scope="col" >Config:</th>
            </tr>
          <% agricultores.forEach(agricultores => { %>
            <tr>
              <td><%= agricultores.nome %> </td>
              <td><%= agricultores.cpf %> </td>
              <td><%= agricultores.nomeFantasia %> </td>
              <td><%= agricultores.cpnj %> </td>
              <td><%= agricultores.statusDeVisita %> </td>
              <td><%= agricultores.dataDeVisita %> </td>
              <td><a href="/cadastrar/index/<%= agricultores._id %> ">Editar</td>
              <td><a class="text-danger" href="/agricultores/delete/<%= agricultores._id %> ">Excluir</td>
            </tr>
          <% }); %> 
        </table>
      </div>
    </div>
<% } else { %>
  <p class="text-center p-5 mb-2 bg-secondary text-white">NÃ£o existe cadastro no banco de dados!</p> 
<% } %> 
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include ('includes/footer')%>